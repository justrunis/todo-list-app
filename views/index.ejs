<%- include("partials/header.ejs") %>

<div class="content-container d-flex flex-column align-items-center justify-content-center my-5">
    <% if (locals.posts && locals.posts.length > 0) { %>
        <% for (let index = 0; index < locals.posts.length; index++) { %>
            <div class="card mb-3">
                <div class="card-body d-flex flex-fill justify-content-between align-items-center">
                    <p class="card-text m-5">
                        <%= locals.posts[index] %>
                    </p>
                    <div class="d-flex flex-column align-items-center justify-content-center">
                
                        <form class="d-flex justify-content-center align-items-center" action="/edit" method="POST">
                            <input type="hidden" name="postIndex" value="<%= index %>">
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-text="<%= locals.posts[index] %>" data-target="#exampleModal" data-id="<%= index %>">
                                <svg xmlns="http://www.w3.org/2000/svg" width="60" height="60" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                    <path
                                        d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                    <path fill-rule="evenodd"
                                        d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
                                </svg>
                            </button>
                        </form>
                
                        <form class="d-flex justify-content-center align-items-center mt-2" action="/remove" method="POST">
                            <input type="hidden" name="postIndex" value="<%= index %>">
                            <button type="submit" class="btn btn-danger">
                                <svg xmlns="http://www.w3.org/2000/svg" width="60" height="60" fill="currentColor" class="bi bi-trash"
                                    viewBox="0 0 16 16">
                                    <path
                                        d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                                    <path
                                        d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                                </svg>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        <% } %>
    <% } else { %>
        <h3>Enter your Todos</h3>
    <% } %>    
</div>

<!-- Modal window-->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit Data</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="editForm" action="/edit" method="POST">
                    <input type="hidden" id="editItemId" name="itemId">
                    <input type="hidden" id="editedData" name="editedData">
                    <input class="modalTextInput form-control" placeholder="Enter new data">
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="saveEdit btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>



<div class="d-flex align-items-center justify-content-center">
    <form class="form-inline-flex" action="/create" method="POST">
        <div class="form-group">
            <textarea class="form-control form-control-lg" name="newTodo" placeholder="Enter a new todo" required></textarea>
        </div>
        <button type="submit" class="btn btn-success d-flex align-items-center justify-content-center btn-lg">
            <svg xmlns="http://www.w3.org/2000/svg" width="60" height="60" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"></path>
                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"></path>
            </svg>
            <span style="margin-left: 8px;"></span>
        </button>        
    </form>
</div>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.0.8/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script>
$(function() {
    $('#exampleModal').on('show.bs.modal', function(e) {
        var btn = $(e.relatedTarget);
        var id = btn.data('id');
        var text = btn.data('text');
        $('.modalTextInput').val(text);
        $('#editItemId').val(id);
        $('#editedData').val(text);
    });

    $('.saveEdit').on('click', function() {
        var id = $('#editItemId').val();
        var editedData = $('.modalTextInput').val();
        saveNote(id, editedData);
        $('#exampleModal').modal('toggle');
    });

    function saveNote(id, editedData) {
        console.log('Saving changes for ID ' + id + ': ' + editedData);

        $.post('/edit', { itemId: id, editedData: editedData })
            .done(function (data) {
                console.log(data);
                window.location.href = '/';
            })
            .fail(function (error) {
                console.error(error);
            });
    }
});
</script>


